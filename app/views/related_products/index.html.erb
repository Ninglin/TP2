<% content_for :admin do%>
<div id="lastViewContainer">
	<ul id="navlist">
		<li class="menu"><p> Admin </p></li>
		<li>
			<a href="/products">Manage Products</a>
		</li>
		<li class="popupmenuprod">
			<a href="/related_products">Manage Related</a>
			<ul id="submenuprod">
				<li class="init"><%= link_to 'New Related', new_related_product_path %></li>
			</ul>
			</li>
		</li>
		<li>
			<a href="/categories">Manage Categories</a>
		</li>
		<li>
			<a href="/accounts">Manage Accounts</a>
		</li>
	</ul>
</div>
<% end %>
<h1>Listing Related Products</h1>

<table id="relProdList">
  <tr class="list_line_even">
    <th>Name</th>
    <th>Related to</th>
    <th>Management</th>
  </tr>

<% @related_products.each do |related_product| %>

 
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
  	
    <td class='list_description'><%= related_product.name %></td>
    <td class="related"><%= Product.find(related_product.product_id).title %></td>
    <td class="list_actions">
    	<%= link_to image_tag('/Images/icons/zoom.png'), related_product %>
   		<%= link_to image_tag('/Images/icons/pencil.png'), edit_related_product_path(related_product) %>
    	<%= link_to image_tag('/Images/icons/delete.png'), related_product, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

