<% if !@current_user.nil? && @current_user.is_admin?%>
<h1>Listing carts</h1>

<table>
  <tr class="list_line_even">
    <th>Cart</th>
    <th>User</th>
    <th>Management</th>
  </tr>

<% @carts.each do |cart| %>
	<tr class="<%=cycle('list_line_odd','list_line_even')%>">
	  	<td><%= cart.id%></td>
	  	<td><%= Account.find(cart.user_id).username%></td>
	    <td>
	    	<%= link_to image_tag('/Images/icons/zoom.png'), cart %>
	   		<%= link_to image_tag('/Images/icons/pencil.png'), edit_cart_path(cart) %>
	   		<%= link_to image_tag('/Images/icons/delete.png'), cart, confirm: 'Are you sure?', method: :delete %>
	   	</td>
  	</tr>
<% end %>

</table>

<br />

<%= link_to 'New Cart', new_cart_path %>
<% else %>
<h1>Denied!</h1>
 <p>You don't have permission to view this page! Click <%= link_to 'here', '/index'%> to return to the index</p>
<% end %>
