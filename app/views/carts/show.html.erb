<head>
	<%= stylesheet_link_tag "cart"%>
	<%= javascript_include_tag "aboutUs"%>
</head>
<div id="wrap">
	<div id="header">
		<div id="logo">
			<a href="index.html"></a>
		</div>
		<div id="loginContainer">
			<form action="index.html">
				<input class="userName" name="user" type="text" value="User Name..."/><br>
				<input class="userPass" name="pass" type="text" value="Password..."/>
				<input class="logInButton" type="submit" value=""/>
			</form>	
		</div>
		<div id="searchBar">
			<form action="categorie.html">
				<div>
					<input id="search" type="text" value="Search keywords..."/><br>
					<input class ="searchButton" type="submit" value=""/>
				</div>
			</form>
		</div>
	</div>
	
	<div id="navContainer">
		<ul id="navlist">
			<li class="menu"><p> Menu </p></li>
			<li>
				<a href="index.html">Home</a>
			</li>
			<li class="popupmenu">
				<a href="categorie.html">Categories</a>
				<ul id="submenu">
					<li class="init"></li>
				</ul>
			</li>
		</ul>
	</div>
	<div id="contentContainer">
		<% if notice %>
			<p id="notice"><%= notice %></p>
		<% end %>
		
		<h3> Your Cart</h3>
		<table>
			<tr>
				<th>Your Order</th>
				<th>Unit Price</th>
				<th>Total Price</th>
			</tr>
		<% total = 0 %>
		<% @cart.line_items.each do |item|%>
			<tr>
				<td>
					<%= item.quantity %> &times; <%= item.product.title %>
				</td>
				<td>
					<%= number_to_currency(item.product.price, :unit => "&euro;") %>
				</td>
				<td>
					<%= 
					aux = item.quantity*item.product.price
					number_to_currency(aux, :unit => "&euro;")
					%>
				</td>
			</tr>
			<% total += aux%>
		<% end %>
			<tr>
				<td></td>
				<td><strong>Total:</strong></td>
				<td><%= number_to_currency(total, :unit => "&euro;")%></td>
			</tr>
		</table>
		<% if @admPermission %>
			<%= link_to 'Edit', edit_cart_path(@cart) %> |
			<%= link_to 'Back', carts_path %>
		<% end %>
	</div>
	<div id="footer">
		<p><a href="aboutUs.html">About Us</a> - &copy; Hugo Tavares, n&ordm; 23305 &amp; Paulo Granja, n&ordm; 31952</p>
		<a href="http://validator.w3.org/check/referer">
		<img src="http://www.w3.org/Icons/valid-xhtml11" alt="valid-xhtml11"/></a>
		<a href="http://jigsaw.w3.org/css-validator/check/referer">
		<img src=" http://jigsaw.w3.org/css-validator/images/vcss" alt="vcss"/></a>
		
		<div id="pagStyle">
			<p>Themes: </p> 
				<select id="styleSelect">
					<option value="1">Orange</option>
					<option value="2">Bordeaux</option>
				</select>
		</div>
	</div>
</div>