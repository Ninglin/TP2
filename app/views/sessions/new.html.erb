<% if @current_user%>
    <p class="log_msg">Logged in as <%= current_user.username %>.
    <%= link_to "Log out", log_out_path, :class => 'log_out' %></p>
    <% if @current_user.is_admin?%>
    	<%= link_to "Go to Management Area", '/admin', :class => 'log_out'%>
    <% else %>
    	<%= link_to "My Account", '/accounts/'+@current_user.id.to_s, :class => 'log_out'%>
    	<%= link_to image_tag('/Images/icons/cart.png'), '/carts/'+session[:cart_id].to_s %>
    <% end %>
<% else %>
	<%= form_tag sessions_path do %>
	
	    <%= text_field_tag :username, params[:username], :class => 'userName', :value => 'Username...' %>
	
	    <%= password_field_tag :password, :class => 'userPass' %>
	
		<%= submit_tag "", :class => 'logInButton' %> 
	<% end %>
	<%= button_to "", new_account_path, :class => 'registerButton', :method => 'get' %>
<% end %>
