<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>
<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Description<th>
		<th>Price</th>
	</tr>
<% @products.each do |product| %>
	<tr>
		<td><%= image_tag(product.image_url)%></td>
  		<td><%= product.title %></td>
  		<td><%= product.description %></td>
  		<td><%= number_to_currency(product.price, :unit => "&euro;") %></td>
	</tr>
<% end %>
</table>

